<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:tint="#111827"
                android:padding="4dp"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thêm từ vựng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <ImageView
                android:id="@+id/btnSave"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_save"
                android:tint="#3B82F6"
                android:padding="4dp"
                android:contentDescription="Save"/>
        </RelativeLayout>

        <!-- Import Excel Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImportExcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_excel"
                    android:background="@drawable/bg_excel_icon"
                    android:padding="10dp"
                    android:tint="#FFFFFF"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import từ Excel"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Thêm hàng loạt bằng tệp .xlsx"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnImportExcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tải lên"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#3B82F6"
                    android:background="@drawable/bg_upload_button"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoặc thêm thủ công"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <!-- Từ vựng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ vựng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <EditText
                android:id="@+id/inputWord"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Ví dụ: Cat"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:inputType="text"/>

            <!-- Phiên âm (IPA) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phiên âm (IPA)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <EditText
                android:id="@+id/inputIPA"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Ví dụ: /kæt/"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:inputType="text"/>

            <!-- Nghĩa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nghĩa"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <EditText
                android:id="@+id/inputMeaning"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Ví dụ: Con mèo"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:inputType="text"/>

            <!-- Ví dụ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ví dụ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <EditText
                android:id="@+id/inputExample"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:hint="Ví dụ: The cat is sleeping."
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="15sp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:inputType="textMultiLine"
                android:gravity="top"/>
        </LinearLayout>

        <!-- Add Button (Fixed at bottom) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddWord"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:text="+ Thêm từ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#3B82F6"
                app:cornerRadius="12dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>