<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VocabularyListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_vocab_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            tools:title="Danh sách từ của bộ Động vật" />

        <EditText
            android:id="@+id/edtSearchVocab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Tìm kiếm từ vựng..."
            android:drawableStart="@drawable/ic_search"
            android:paddingStart="12dp"
            android:background="@drawable/bg_search_edit_text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVocabulary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:listitem="@layout/item_vocabulary" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddVocabulary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="#FFFFFF"
        app:backgroundTint="#3B82F6" />

</FrameLayout>