<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:background="@color/gray_background">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- Header with gradient and rounded bottom -->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="190dp"
			android:background="@drawable/gradient_header_rounded"
			android:padding="20dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Bộ từ vựng"
					android:textColor="@android:color/white"
					android:textStyle="bold"
					android:textSize="26sp"/>

				<EditText
					android:id="@+id/edt_search_topic"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:layout_marginTop="16dp"
					android:background="@drawable/bg_search_translucent"
					android:hint="Tìm kiếm chủ đề..."
					android:drawableStart="@drawable/ic_search"
					android:drawablePadding="8dp"
					android:paddingStart="16dp"
					android:paddingEnd="16dp"
					android:textColor="@android:color/white"
					android:textColorHint="@color/white_80"
					android:importantForAutofill="no"
					android:inputType="text"
					android:singleLine="true"/>
			</LinearLayout>
		</FrameLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rv_decks"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="12dp"
			android:paddingEnd="12dp"
			android:paddingTop="16dp"
			android:paddingBottom="24dp"/>
	</LinearLayout>
</androidx.core.widget.NestedScrollView>
