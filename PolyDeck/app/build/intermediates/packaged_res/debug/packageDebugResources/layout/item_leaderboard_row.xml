<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Rank Number -->
        <TextView
            android:id="@+id/tvRank"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_rank_circle"
            android:gravity="center"
            android:text="#4"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Avatar Anchor (invisible, used for constraint) -->
        <View
            android:id="@+id/avatarAnchor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvRank"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Abbreviation Badge -->
        <TextView
            android:id="@+id/tvAbbreviation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_abbreviation"
            android:gravity="center"
            android:text="PU"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/avatarAnchor"
            app:layout_constraintEnd_toEndOf="@id/avatarAnchor"
            app:layout_constraintStart_toStartOf="@id/avatarAnchor"
            app:layout_constraintTop_toTopOf="@id/avatarAnchor" />

        <!-- Avatar (for highlighted items) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/avatarAnchor"
            app:layout_constraintEnd_toEndOf="@id/avatarAnchor"
            app:layout_constraintStart_toStartOf="@id/avatarAnchor"
            app:layout_constraintTop_toTopOf="@id/avatarAnchor">

            <TextView
                android:id="@+id/tvAvatarText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5C6BC0"
                android:gravity="center"
                android:text="NH"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- User Info Container -->
        <LinearLayout
            android:id="@+id/userInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvScore"
            app:layout_constraintStart_toEndOf="@id/avatarAnchor"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="User Name"
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_fire"
                    app:tint="#FF9800" />

                <TextView
                    android:id="@+id/tvDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="6 days"
                    android:textColor="#FF9800"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Score -->
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- More Button -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#BDBDBD" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>