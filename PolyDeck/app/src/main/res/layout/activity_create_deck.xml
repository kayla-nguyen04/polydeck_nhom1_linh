<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:padding="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#1F2937"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tạo bộ từ mới"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_save"
                    app:tint="#3B82F6"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_purple"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên bộ từ"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả về bộ từ của bạn"
                        android:textColor="#E0E0E0"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên bộ từ"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etDeckName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Ví dụ: IELTS Vocabulary"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn màu sắc"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins">

                        <View
                            android:id="@+id/color1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_purple"/>

                        <View
                            android:id="@+id/color2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_teal"/>

                        <View
                            android:id="@+id/color3"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_pink"/>

                        <View
                            android:id="@+id/color4"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_red"/>

                        <View
                            android:id="@+id/color5"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_blue"/>

                        <View
                            android:id="@+id/color6"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/color_selector_violet"/>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnAddWords"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="+ Thêm từ vựng"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_blue"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>