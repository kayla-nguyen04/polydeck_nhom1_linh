<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Đã học xong!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp"
        android:text="Bạn đã hoàn thành 5 từ vựng của chủ đề Động vật."
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <!-- Primary Button: Làm bài kiểm tra ngay -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_quiz_now"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Làm bài kiểm tra ngay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_gradient_quiz"
            app:cornerRadius="28dp"/>

        <!-- Secondary Button: Quay lại danh sách -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_list"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Quay lại danh sách"
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:textAllCaps="false"
            android:backgroundTint="#F3F4F6"
            app:cornerRadius="28dp"/>

    </LinearLayout>

</LinearLayout>
