<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.VocabularyListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_vocab_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        tools:title="Danh sách từ của bộ Động vật" />

    <EditText
        android:id="@+id/edtSearchVocab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Tìm kiếm từ vựng..."
        android:drawableStart="@drawable/ic_search"
        android:paddingStart="12dp"
        android:background="@drawable/bg_search_edit_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVocabulary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:listitem="@layout/item_vocabulary" />

</LinearLayout>