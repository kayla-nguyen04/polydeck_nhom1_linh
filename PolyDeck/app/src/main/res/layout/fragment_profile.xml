<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_rounded"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle_white_border"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nguyenvana@email.com"
            android:textColor="@color/white_80"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"/>

            <ProgressBar
                android:id="@+id/progress_xp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="10"
                android:indeterminate="false"
                android:progressDrawable="@drawable/progress_xp_drawable"/>

            <TextView
                android:id="@+id/tv_xp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 2,000 XP"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Main card items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/row_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="10dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_edit"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Chỉnh sửa hồ sơ"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_favorites"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="10dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_vocabulary"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Từ yêu thích"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="10dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_manage_decks"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Cài đặt"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_ranking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="10dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_quiz"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Bảng xếp hạng"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_support"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="10dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_support"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Hỗ trợ"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_logout"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Đăng xuất" android:textColor="#EF4444"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_more_vert"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

